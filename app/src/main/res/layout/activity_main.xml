<?xml version="1.0" encoding="utf-8"?>
<!--
В качестве макета был выбран GridLayout так как он позволяет выполнить требуемую задачу
без многократной вложенности, имеет простую настройку ячеек, что способствует быстрому и
простому проектированию, а также такой подход не нагружает ресурсы.
-->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalculatorActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        tools:ignore="RtlCompat"
        android:textColor="@color/white"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="380dp"
        android:columnCount="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/AC"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/service_button"/>

        <Button
            android:id="@+id/plusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/plusMinus"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/service_button"
            />

        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/percent"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/service_button"/>

        <Button
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/divider"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/mathematical_operations"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/seven"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/eight"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/nine"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/multiplication"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/mathematical_operations"/>

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/four"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>


        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/five"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/six"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/minus"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/mathematical_operations"/>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/one"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/two"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/three"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>


        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/plus"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/mathematical_operations"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/zero"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/dot"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/digit"/>

        <Button
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/commonMargin"
            android:text="@string/equals"
            android:textSize="@dimen/commonTextSize"
            android:backgroundTint="@color/mathematical_operations"/>

    </GridLayout>

</FrameLayout>